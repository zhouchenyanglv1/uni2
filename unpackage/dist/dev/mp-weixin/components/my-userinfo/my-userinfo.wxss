.page-box {
  display: flex;
  flex-direction: column;
  background-color: #f6f6f6;
  height: 1110rpx;
  position: relative;
}
.page-box .profile-image {
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background-color: red;
}
.page-box .profile-image image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  border: 1px solid black;
  background-color: white;
  margin-bottom: 20rpx;
}
.page-box .contain-box {
  margin: 0  5%  20rpx 5%;
  position: absolute;
  top: 380rpx;
  left: 0;
  width: 90%;
}
.page-box .contain-box .tab1 {
  display: flex;
  justify-content: space-around;
  background-color: white;
  padding: 12rpx 0;
}
.page-box .contain-box .tab1 .tab-item {
  display: flex;
  align-items: center;
  flex-direction: column;
}
.page-box .contain-box .tab1 .tab-item image {
  width: 100rpx;
  height: 100rpx;
}
.page-box .contain-box .tab2 {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  background-color: white;
  padding: 12rpx 0;
}
.page-box .contain-box .tab2 .title {
  margin-bottom: 10rpx;
  padding-left: 12rpx;
}
.page-box .contain-box .tab3 {
  width: 100%;
  margin-top: 30rpx;
  background-color: white;
  padding: 12rpx 0;
}
.page-box .contain-box .tab3 .line-tab {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 12rpx;
  align-items: center;
}

