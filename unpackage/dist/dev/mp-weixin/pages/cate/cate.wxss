.scroll-view-container {
  display: flex;
}
.scroll-view-container .scroll-view-left {
  width: 250rpx;
}
.scroll-view-container .scroll-view-left .scroll-item-left {
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  background-color: #f7f7f7;
  position: relative;
  font-size: 12px;
}
.scroll-view-container .scroll-view-left .scroll-item-left.active {
  background-color: white;
}
.scroll-view-container .scroll-view-left .scroll-item-left.active::before {
  content: ' ';
  display: block;
  width: 3px;
  height: 60rpx;
  background-color: red;
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.scroll-view-container .scroll-view-right {
  height: 300rpx;
}
.scroll-view-container .scroll-view-right .right-title {
  text-align: center;
  font-size: 18px;
  font-weight: 600;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 30rpx;
}
.scroll-view-container .scroll-view-right .right-item-container {
  display: flex;
  flex-wrap: wrap;
}
.scroll-view-container .scroll-view-right .right-item-container .right-item {
  display: flex;
  width: 33.33%;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}
.scroll-view-container .scroll-view-right .right-item-container .right-item .right-item-img {
  width: 150rpx;
  height: 150rpx;
}
.scroll-view-container .scroll-view-right .right-item-container .right-item .right-item-name {
  text-align: center;
  font-size: 12px;
}

